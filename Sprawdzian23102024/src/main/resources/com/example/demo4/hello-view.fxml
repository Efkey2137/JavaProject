<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="299.0" prefWidth="315.0" spacing="20.0" style="-fx-background-color: white;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23" fx:controller="com.example.demo4.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <TextField fx:id="name" promptText="imie">
         <font>
            <Font size="20.0" />
         </font>
      </TextField>
      <TextField fx:id="age" promptText="wiek">
         <font>
            <Font size="20.0" />
         </font>
      </TextField>
      <ComboBox fx:id="gender" prefWidth="300.0">
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </ComboBox>
      <Button mnemonicParsing="false" onAction="#save" prefWidth="300.0" text="Zapisz">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
      <Label fx:id="info">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
   </children>
</VBox>
